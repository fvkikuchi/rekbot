{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "rootDir": "./",
    "outDir": ".build"
  },
  "exclude": [
    "node_modules"
  ]
}
